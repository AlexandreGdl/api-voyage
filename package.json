{
  "name": "api-voyage",
  "private": false,
  "version": "1.0.0",
  "description": "Personal api",
  "author": "Alexandre Guindeuil <guindeuilaleaxndre@gmail.com>",
  "repository": "https://github.com/AlexandreGdl/api-voyage",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "dev": "NODE_ENV=development nest start --watch",
    "dev:win": "SET NODE_ENV=development&& nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "prestart:prod": "nest build && node dist/src/main",
    "postinstall": "npm run prestart:prod",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "generate-data": "node scripts/generate-dev-data-index.js"
  },
  "dependencies": {
    "@nestjs/common": "^7.1.1",
    "@nestjs/core": "^7.1.1",
    "@nestjs/jwt": "^7.2.0",
    "@nestjs/mongoose": "^7.0.1",
    "@nestjs/passport": "^7.1.5",
    "@nestjs/platform-express": "^7.1.1",
    "@nestjs/swagger": "^4.5.12",
    "@nestjs/testing": "^7.1.1",
    "@types/passport-local": "^1.0.33",
    "apple-auth": "^1.0.6",
    "apple-signin-auth": "^1.4.1",
    "aws-sdk": "^2.771.0",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.12.2",
    "dotenv": "^8.2.0",
    "faker": "^4.1.0",
    "fs-extra": "^9.0.1",
    "isomorphic-fetch": "^2.2.1",
    "jsonapi-serializer": "^3.6.6",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.6.3",
    "mongoose": "^5.10.5",
    "nestjs-pino": "^1.2.0",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pino-pretty": "^4.3.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.5.5",
    "sharp": "^0.26.1",
    "swagger-ui-express": "^4.1.4",
    "ts-node": "^9.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.2.0",
    "@nestjs/schematics": "^7.0.0",
    "@shelf/jest-mongodb": "^1.2.3",
    "@types/bcrypt": "^3.0.0",
    "@types/body-parser": "^1.19.0",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.6",
    "@types/faker": "^4.1.12",
    "@types/isomorphic-fetch": "^0.0.35",
    "@types/jest": "^26.0.0",
    "@types/jsonapi-serializer": "^3.6.3",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongoose": "^5.7.23",
    "@types/node": "^14.0.6",
    "@types/passport": "^1.0.4",
    "@types/passport-jwt": "^3.0.3",
    "@types/supertest": "^2.0.9",
    "@typescript-eslint/eslint-plugin": "^3.6.0",
    "@typescript-eslint/parser": "^3.6.0",
    "eslint": "^7.4.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "jest": "^26.4.2",
    "jest-serial-runner": "^1.1.0",
    "prettier": "^2.0.5",
    "supertest": "^4.0.2",
    "ts-jest": "^26.1.0",
    "ts-loader": "^7.0.5",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.3"
  },
  "jest": {
    "displayName": {
      "name": "API",
      "color": "blue"
    },
    "verbose": true,
    "runner": "jest-serial-runner",
    "testSequencer": "../src/_test/config/sequencer.jest.js",
    "setupFiles": [
      "../src/_test/config/dotenv.module.ts"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "preset": "@shelf/jest-mongodb",
    "testTimeout": 30000
  }
}
